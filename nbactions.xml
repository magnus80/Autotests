<?xml version="1.0" encoding="UTF-8"?>
<actions>
        <action>
            <actionName>rebuild</actionName>
            <packagings>
                <packaging>*</packaging>
            </packagings>
            <goals>
                <goal>clean</goal>
                <goal>test</goal>
            </goals>
            <properties>
                <bell.tags>training</bell.tags>
                <bell.browser>ie</bell.browser>
                <bell.killAllAfterTest>false</bell.killAllAfterTest>
                <bell.browserWidth>1280</bell.browserWidth>
                <bell.browserHeight>768</bell.browserHeight>
                <bell.handleAlertWhenOpenUrl>accept</bell.handleAlertWhenOpenUrl>
                <bell.testTimeout>3600000</bell.testTimeout>
                <bell.downloadTimeoutMs>60000</bell.downloadTimeoutMs>
                <bell.ajaxWaitMs>180000</bell.ajaxWaitMs>
                <selenide.timeout>10000</selenide.timeout>
                <selenide.pollingInterval>200</selenide.pollingInterval>
                <selenide.browser>Autotest.common.utils.BellWebDriverProvider</selenide.browser>
                <selenide.holdBrowserOpen>false</selenide.holdBrowserOpen>
                <selenide.start-maximized>false</selenide.start-maximized>
                <selenide.screenshots>false</selenide.screenshots>
                <webdriver.ie.driver.extractpath>target</webdriver.ie.driver.extractpath>
                <webdriver.retries>0</webdriver.retries>
                <webdriver.timeouts.implicitlywait>10000</webdriver.timeouts.implicitlywait>
                <webdriver.ie.driver>Dependencies\IEDriverServer.exe</webdriver.ie.driver>
                <webdriver.ie.driver.loglevel>WARN</webdriver.ie.driver.loglevel>
                <webdriver.ie.driver.logfile>target\IEDriverServer.log</webdriver.ie.driver.logfile>
                <allure.max.title.length>30000</allure.max.title.length>
                <DYNATRACE_ACTIVATE>false</DYNATRACE_ACTIVATE>
                <allure.screenshot.afterStep>false</allure.screenshot.afterStep>
                <allure.screenshot.beforeStep>false</allure.screenshot.beforeStep>
                <webdriver.nativeEvents>true</webdriver.nativeEvents>
                <webdriver.ie.windowFocus>true</webdriver.ie.windowFocus>
                <webdriver.ignoreZoomSetting>true</webdriver.ignoreZoomSetting>
            </properties>
        </action>
        <action>
            <actionName>run</actionName>
            <packagings>
                <packaging>jar</packaging>
            </packagings>
            <goals>
                <goal>site</goal>
                <goal>jetty:run</goal>
            </goals>
        </action>
        <action>
            <actionName>profile</actionName>
            <packagings>
                <packaging>jar</packaging>
            </packagings>
            <goals>
                <goal>process-classes</goal>
                <goal>org.codehaus.mojo:exec-maven-plugin:1.2.1:exec</goal>
            </goals>
            <properties>
                <exec.args>-classpath %classpath ${packageClassName}</exec.args>
                <exec.executable>java</exec.executable>
            </properties>
        </action>
        <action>
            <actionName>build</actionName>
            <packagings>
                <packaging>*</packaging>
            </packagings>
            <goals>
                <goal>clean</goal>
                <goal>test</goal>
            </goals>
            <properties>
                <bell.tags>training</bell.tags>
                <bell.browser>ie</bell.browser>
                <bell.killAllAfterTest>false</bell.killAllAfterTest>
                <bell.browserWidth>1280</bell.browserWidth>
                <bell.browserHeight>768</bell.browserHeight>
                <bell.handleAlertWhenOpenUrl>accept</bell.handleAlertWhenOpenUrl>
                <bell.testTimeout>3600000</bell.testTimeout>
                <bell.downloadTimeoutMs>60000</bell.downloadTimeoutMs>
                <selenide.timeout>30000</selenide.timeout>
                <selenide.pollingInterval>250</selenide.pollingInterval>
                <selenide.browser>Autotest.common.utils.BellWebDriverProvider</selenide.browser>
                <selenide.holdBrowserOpen>false</selenide.holdBrowserOpen>
                <selenide.start-maximized>false</selenide.start-maximized>
                <selenide.screenshots>false</selenide.screenshots>
                <webdriver.ie.driver.extractpath>target</webdriver.ie.driver.extractpath>
                <webdriver.retries>0</webdriver.retries>
                <webdriver.timeouts.implicitlywait>30000</webdriver.timeouts.implicitlywait>
                <webdriver.ie.driver>Dependencies\IEDriverServer.exe</webdriver.ie.driver>
                <webdriver.ie.driver.loglevel>WARN</webdriver.ie.driver.loglevel>
                <webdriver.ie.driver.logfile>target\IEDriverServer.log</webdriver.ie.driver.logfile>
                <allure.max.title.length>30000</allure.max.title.length>
                <DYNATRACE_ACTIVATE>false</DYNATRACE_ACTIVATE>
                <allure.screenshot.afterStep>false</allure.screenshot.afterStep>
                <allure.screenshot.beforeStep>false</allure.screenshot.beforeStep>
            </properties>
        </action>
        <action>
            <actionName>debug.test.single</actionName>
            <packagings>
                <packaging>*</packaging>
            </packagings>
            <goals>
                <goal>test-compile</goal>
                <goal>surefire:test</goal>
            </goals>
            <properties>
                <test>${packageClassName}</test>
                <forkMode>once</forkMode>
                <maven.surefire.debug>-Xdebug -Xrunjdwp:transport=dt_socket,server=n,address=${jpda.address}</maven.surefire.debug>
                <jpda.listen>true</jpda.listen>
                <bell.tags>training</bell.tags>
                <bell.browser>ie</bell.browser>
                <bell.killAllAfterTest>false</bell.killAllAfterTest>
                <bell.browserWidth>1280</bell.browserWidth>
                <bell.browserHeight>768</bell.browserHeight>
                <bell.handleAlertWhenOpenUrl>accept</bell.handleAlertWhenOpenUrl>
                <bell.testTimeout>3600000</bell.testTimeout>
                <bell.downloadTimeoutMs>60000</bell.downloadTimeoutMs>
                <selenide.pollingInterval>250</selenide.pollingInterval>
                <selenide.timeout>30000</selenide.timeout>
                <selenide.browser>Autotest.common.utils.BellWebDriverProvider</selenide.browser>
                <selenide.holdBrowserOpen>false</selenide.holdBrowserOpen>
                <selenide.start-maximized>false</selenide.start-maximized>
                <selenide.screenshots>false</selenide.screenshots>
                <webdriver.retries>0</webdriver.retries>
                <webdriver.timeouts.implicitlywait>30000</webdriver.timeouts.implicitlywait>
                <webdriver.ie.driver>Dependencies\IEDriverServer.exe</webdriver.ie.driver>
                <webdriver.ie.driver.loglevel>WARN</webdriver.ie.driver.loglevel>
                <webdriver.ie.driver.logfile>target\IEDriverServer.log</webdriver.ie.driver.logfile>
                <webdriver.ie.driver.extractpath>target</webdriver.ie.driver.extractpath>
                <allure.max.title.length>30000</allure.max.title.length>
                <DYNATRACE_ACTIVATE>false</DYNATRACE_ACTIVATE>
                <allure.screenshot.afterStep>false</allure.screenshot.afterStep>
                <allure.screenshot.beforeStep>false</allure.screenshot.beforeStep>
            </properties>
        </action>
        <action>
            <actionName>CUSTOM-Starteeee</actionName>
            <displayName>Starteeee</displayName>
            <goals>
                <goal>site</goal>
                <goal>jetty:run</goal>
            </goals>
        </action>
    </actions>
